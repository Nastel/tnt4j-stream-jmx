<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="WebApp_ID" version="3.0">

    <display-name>TNT4J-Stream-JMX-WAS</display-name>

    <!-- Change to "Production" when you are ready to deploy -->
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <listener>
        <listener-class>com.jkoolcloud.tnt4j.stream.jmx.StreamJmxServletContextListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>StreamJmx</servlet-name>
        <servlet-class>com.jkoolcloud.tnt4j.stream.jmx.StreamJmxServletContextListener</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StreamJmx</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

</web-app>
